@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Home>
@using ClientDependency.Core.Mvc
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    Layout = "master.cshtml";
    var heroImage = Model.HeroBackgroundImage != null ? Model.HeroBackgroundImage.Url() : string.Empty;
    string domainAddress = $"{Request.Url?.Scheme}://{Request.Url?.Authority}";

    Html.EnableClientValidation();
    Html.EnableUnobtrusiveJavaScript();

    Html.RequiresJs("~/scripts/jquery-3.2.1.min.js");
    Html.RequiresJs("~/scripts/jquery.validate.min.js");
    Html.RequiresJs("~/scripts/jquery.validate.unobtrusive.min.js");
    Html.RequiresJs("~/scripts/jquery.unobtrusive-ajax.min.js");
}

@section HeaderMeta
{
    <meta property="og:url" content="@Model.Url()"/>
    <meta property="og:type" content="website"/>
    <meta property="og:title" content="@Model.Name - @Model.Sitename"/>
    <meta property="og:image" content="@($"{domainAddress}{Model.SiteLogo.Url()}")"/>
}

<div class="section home-header">
    <img class="p-absolute img-1" src="@Url.Content("~/css/imgs/1.png")" alt=""/>
    <img class="p-absolute img-2" src="@Url.Content("~/css/imgs/2.png")" alt=""/>
    <div class="container">
        <div class="row">
            <div class="col-md-5 mb-30">
                <div class="header-big-logo justify-content-center">
                    @if (Model.HeroImage != null)
                    {
                        <img src="@Model.HeroImage.MediaItem.Url()" alt="sub logo">
                    }
                    else
                    {
                        <img src="@Url.Content("~/css/imgs/landing-logo.png")" alt="sub logo">
                    }
                </div>
                <div class="contact-button text-center">
                    <a class="btn btn-lg btn-success btn-outline-success" href="#contact">@Model.HeroCtacaption</a>
                </div>
            </div>
            <div class="col-md-7">
                <div class="header-right-logo text-center">
                    @if (Model.AboutTopPicture != null)
                    {
                        <img src="@Model.AboutTopPicture.MediaItem.Url()" alt="">
                    }
                    else
                    {
                        <img src="@Url.Content("~/css/imgs/landing-text-logo.png")" alt="">
                    }
                </div>
                <div class="header-about-detail">
                    <div class="description">
                        @Html.Raw(Model.AboutDescription)
                    </div>
                    <div class="summaries text-center">
                        <div class="row">
                            @foreach (var item in Model.FeatureStats)
                            {
                                <div class="col-md-@((int)12 / Model.FeatureStats.Count()) stats-item">
                                    <span class="stats-count">@item.StatsCount</span>
                                    <p class="stats-text">@item.Title</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--Section First-->
<div class="section home-group-first">
    <div class="container ps-relative">
        <div class="bubble b-1">
            <img class="w-100" src="@Url.Content("~/css/imgs/bubble.png")" alt=""/>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="group-first-header">
                    <h2>@Model.WhatWeHaveTitle</h2>
                </div>
                <div class="group-first-header-line">
                    <img class="line-w mt-1rem mb-2rem" src="@Url.Content("~/css/imgs/line.png")" alt=""/>
                </div>
            </div>
        </div>
        <div class="row mt-30">
            <div class="col-md-6">
                <a href="@Model.VietNamOiActionUrl" target="_blank">
                    @if (Model.VietNamOiPicture != null)
                    {
                        <img class="w-100" src="@Model.VietNamOiPicture.MediaItem.Url()" alt=""/>
                    }
                    else
                    {
                        <img class="w-100" src="@Url.Content("~/css/imgs/detail-img-1.png")" alt=""/>
                    }
                </a>
            </div>
            <div class="col-md-6">
                <div class="right-content">
                    <div class="content-header">
                        @Model.VietNamOiCommunityTitle
                    </div>
                    <div class="row">
                        <div class="col-12 text-justify">
                            <div class="fw-600 mb-10">~643.800 thành viên</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 text-justify mt-10">
                            @Html.Raw(Model.VietNamOiDescription)
                        </div>
                    </div>
                    <div class="row text-center justify-content-between mt-10">
                        <div class="col-6 summary-item">
                            <div class="fw-400">
                                <strong>Tốc độ tăng trưởng :</strong>
                            </div>
                            <div class="info">
                                <span class="num-layout fw-600">~7%</span><span> / tháng</span>
                            </div>
                        </div>
                        <div class="col-6 summary-item">
                            <div class="fw-400">
                                <strong>Tổng tương tác lên đến :</strong>
                            </div>
                            <div class="info"><span class="num-layout fw-600">~2.110.000</span> / tháng</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <img class="p-absolute img-3" src="@Url.Content("~/css/imgs/3.png")" alt=""/>
</div>

