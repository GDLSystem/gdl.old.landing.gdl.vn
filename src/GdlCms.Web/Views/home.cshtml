</div>

<!--Section All Groups-->
<div class="section all-fb-groups">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="groups-title">
                    <h2 class="text-center">CÁC CỤM CỘNG ĐỒNG</h2>
                </div>
                <div class="fb-groups-header-line text-center">
                    <img class="line-w mt-1rem mb-2rem" src="@Url.Content("~/css/imgs/line.png")" alt=""/>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 mt-20">
        <div class="row">
            <div class="col-md-4">
                <a href="/cong-dong">
                    <img class="w-100" src="~/css/imgs/community-1.png" alt="">
                </a>
            </div>
            <div class="col-md-4">
                <a href="/cong-dong">
                    <img class="w-100" src="~/css/imgs/community-2.png" alt="">
                </a>
            </div>
            <div class="col-md-4">
                <a href="/cong-dong">
                    <img class="w-100" src="~/css/imgs/community-3.png" alt="">
                </a>
            </div>
        </div>
    </div>
</div>
<!--Section Partner-->
<div class="section all-partners">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="partners-title">
                    <h2 class="text-center">@Model.PartnerHeader</h2>
                </div>
                <div class="fb-groups-header-line text-center">
                    <img class="line-w mt-1rem mb-2rem" src="@Url.Content("~/css/imgs/line.png")" alt=""/>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row justify-content-center align-center">
            @{
                var partners = Model.FeaturePartners.ToArray();
                for (int i = 0; i < partners.Length; i++)
                {
                    if (partners[i].FeatureCoverImage != null)
                    {
                        <div class="col-md-3">
                            <div class="partner-item">
                                <img src="@partners[i].FeatureCoverImage.MediaItem.Url()" alt="@partners[i].FeatureName">
                            </div>
                        </div>
                    }
                }
            }
        </div>
    </div>
</div>
<!--Section Contact-->
<div class="section landing-section section-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-8 ml-auto mr-auto mb-20">
                <h2 class="text-center">Keep in touch?</h2>
                @{ Html.RenderAction("RenderForm", "ContactSurface"); }
                <!-- contact-warning -->
                <div class="message-warning text-danger">
                    @Model.ContactFormWarningMessage
                </div>

                <!-- contact-success -->
                <div class="message-success text-success">
                    @Model.ContactFormSuccessMessage<br>
                </div>
            </div>
            <div class="col-md-4">
                <div class="contact-info">
                    <h4 class="info-title">@Model.ContactSubHeader</h4>

                    <div class="item-block">
                        <h5>@Model.ContactAddressTitle</h5>
                        @Model.ContactAddressDetail
                    </div>

                    <div class="item-block">
                        <h5>@Model.ContactEmailHeader</h5>
                        @Model.ContactEmailDetail
                    </div>

                    <div class="item-block">
                        <h5>@Model.ContactPhoneTitle</h5>
                        @Model.ContactPhoneDetail
                    </div>

                </div> <!-- end contact-info -->
            </div>
        </div>
    </div>
</div>

