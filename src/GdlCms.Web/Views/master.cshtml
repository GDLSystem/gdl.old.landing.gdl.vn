@using Umbraco.Core.PropertyEditors
@inherits UmbracoViewPage
@{
    Layout = null;
    // Get basic design settings from the homepage
    var home = (Home)Model.Root();
    var font = home.Font;
    var colorTheme = home.ColorTheme;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>@Model.Name - @home.Sitename</title>
    @RenderSection("HeaderMeta", false)

    <!-- CSS
    ================================================== -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Source+Serif+Pro:wght@400;600;700&display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;500&display=swap">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet"/>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <!-- CSS Files -->
    <link href="@Url.Content("~/css/assets/css/bootstrap.min.css")" rel="stylesheet"/>
    <link rel="stylesheet" href="@Url.Content("~/css/assets/css/paper-kit.css")?v=@DateTime.Now.Ticks">
    <link rel="stylesheet" href="@Url.Content("~/css/fontawesome/css/all.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/animated-intro/css/style.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/gdl.css")?v=@DateTime.Now.Ticks">
    <!-- CSS Just for demo purpose, don't include it in your project -->
    @* <link href="./assets/demo/demo.css" rel="stylesheet" /> *@

    @RenderSection("Header", required: false)

</head>
<body class="index-page sidebar-collapse">
<!-- Navbar -->
<nav class="navbar navbar-expand-lg fixed-top">
    <div class="container">
        <div class="navbar-translate">
            <a class="navbar-brand" href="/" rel="tooltip" title="Home page" data-placement="bottom">
                <img class="logo" src="@home.SiteLogo.MediaUrl()" alt="@home.Name"/>
            </a>
            <button class="navbar-toggler navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-bar bar1"></span>
                <span class="navbar-toggler-bar bar2"></span>
                <span class="navbar-toggler-bar bar3"></span>
            </button>
        </div>
        <div class="collapse navbar-collapse justify-content-end" id="navigation">
            <ul class="navbar-nav">
                @Html.Partial("~/Views/Partials/Navigation/TopNavigation.cshtml")
            </ul>
        </div>
    </div>
</nav>
<!-- End Navbar -->
<div class="main">
    @RenderBody()
</div>
<footer class="footer mt-30">
    <div class="container">
        <div class="row">
            <div class="col-md-2">
                <div id="footer-logo">
                    <div class="mr-1rem">
                        <img src="~/css/imgs/footer-icon.png" alt="">
                    </div>
                    <div>
                        @* <img src="~/css/imgs/footer-logo-1.png" alt="" style="height: 2.5rem;"> *@
                        <a href="https://gdl.vn/" style="text-decoration: none !important">
                            <p class="footer-logo-custom">www.gdl.vn</p>
                        </a>
                        <div class="socials">
                            <a class="social-item" href="https://www.tiktok.com/">
                                <i class="fab fa-tiktok"></i>
                            </a>
                            <a class="social-item" href="https://www.facebook.com/">
                                <i class="fab fa-facebook"></i>
                            </a>
                            <a class="social-item" href="https://www.instagram.com/">
                                <i class="fab fa-instagram"></i>
                            </a>
                            <a class="social-item" href="https://www.youtube.com/">
                                <i class="fab fa-youtube"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 footer-contact">
                <div class="f-item footer-m">
                    <h4 class="footer-item-title">@home.ContactAddressTitle</h4>
                    @home.ContactAddressDetail
                </div>


            </div>
            <div class="col-md-3">
                <div class="f-item footer-m custom-size">
                    <h4 class="footer-item-title">@home.ContactEmailHeader</h4>
                    @home.ContactEmailDetail
                </div>
            </div>
            <div class="col-md-3">
                <div class="f-item footer-m custom-size">
                    <h4 class="footer-item-title">@home.ContactPhoneTitle</h4>
                    @home.ContactPhoneDetail
                </div>
            </div>
        </div>
        <div class="row">
            @* <nav class="footer-nav"> *@
            @*     <ul> *@
            @*         <li> *@
            @*             <a href="https://www.creative-tim.com" target="_blank">Creative Tim</a> *@
            @*         </li> *@
            @*         <li> *@
            @*             <a href="http://blog.creative-tim.com/" target="_blank">Blog</a> *@
            @*         </li> *@
            @*         <li> *@
            @*             <a href="https://www.creative-tim.com/license" target="_blank">Licenses</a> *@
            @*         </li> *@
            @*     </ul> *@
            @* </nav> *@
            <div class="credits ml-auto mr-auto">
                <span class="copyright">
                    © Copyright gdl.vn @DateTime.Now.Year
                </span>
            </div>
        </div>
    </div>
</footer>
<!--   Core JS Files   -->
@* <script src="@Url.Content("~/scripts/js/core/jquery.min.js")" type="text/javascript"></script> *@
<script src="@Url.Content("~/scripts/jquery-3.2.1.min.js")"></script>
<script src="@Url.Content("~/scripts/plugins.js")"></script>
<script src="@Url.Content("~/scripts/main.js")"></script>
<script src="@Url.Content("~/scripts/js/core/popper.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/scripts/js/core/bootstrap.min.js")" type="text/javascript"></script>
<!--  Plugin for Switches, full documentation here: http://www.jque.re/plugins/version3/bootstrap.switch/ -->
<script src="@Url.Content("~/scripts/js/plugins/bootstrap-switch.js")"></script>
<!--  Plugin for the Sliders, full documentation here: http://refreshless.com/nouislider/ -->
<script src="@Url.Content("~/scripts/js/plugins/nouislider.min.js")" type="text/javascript"></script>
<!--  Plugin for the DatePicker, full documentation here: https://github.com/uxsolutions/bootstrap-datepicker -->
<script src="@Url.Content("~/scripts/js/plugins/moment.min.js")"></script>
<script src="@Url.Content("~/scripts/js/plugins/bootstrap-datepicker.js")" type="text/javascript"></script>
<!-- Control Center for Paper Kit: parallax effects, scripts for the example pages etc -->
<script src="@Url.Content("~/scripts/js/paper-kit.js?v=2.2.0")" type="text/javascript"></script>
<script defer src="@Url.Content("~/css/fontawesome/js/all.js")"></script>
<script defer src="@Url.Content("~/css/animated-intro/js/main.js")"></script>
<script defer src="@Url.Content("~/css/animated-intro/js/modernizr.js")"></script>
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
  AOS.init();
</script>
<!--  Google Maps Plugin    -->
@* <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE"></script> *@

@RenderSection("Scripts", required: false)
<script>
      $(document).ready(function() {

        function scrollToTop() {
            $("html, body").animate({
              scrollTop: $('body').offset().top
            }, 1000);
        }
      });
    </script>
</body>
</html>